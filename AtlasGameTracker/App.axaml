<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AtlasGameTrackerUI.App"
             RequestedThemeVariant="Dark">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
				<ResourceDictionary x:Key="Light">
                    <WindowIcon x:Key="AppIcon">avares://AtlasGameTrackerUI/Assets/atlas_light.png</WindowIcon>
                </ResourceDictionary>
			    <ResourceDictionary x:Key="Dark">
                    <WindowIcon x:Key="AppIcon">avares://AtlasGameTrackerUI/Assets/atlas_dark.png</WindowIcon>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme />
        <Style Selector="TextBlock">
            <Setter Property="FontSize" Value="18"/>
        </Style>
        <Style Selector="Window">
			<Setter Property="Icon" Value="{DynamicResource AppIcon}"/>
        </Style>
    </Application.Styles>
</Application>