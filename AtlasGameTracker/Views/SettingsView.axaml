<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:AtlasGameTrackerUI.ViewModels"
             x:DataType="vm:SettingsViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AtlasGameTrackerUI.SettingsView">
<StackPanel Margin="20">
    <TextBlock Text="Settings" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
    <TextBlock Text="Select Theme:" FontSize="16" Margin="0,0,0,5"/>
    <ComboBox ItemsSource="{Binding ThemeOptions}"
              SelectedItem="{Binding SelectedTheme, Mode=TwoWay}"
              SelectionChanged="SelectionChanged"
              Width="200"
              Margin="0,0,0,10">
    </ComboBox>
</StackPanel>
</UserControl>
